{% extends 'base.html.twig' %}

{% block title %}PassageAGue index{% endblock %}

{% block main %}
    <h1>PassageAGue index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>GpsX</th>
                <th>GpsY</th>
                <th>FrequenceSubmersion</th>
                <th>LargeurPassage</th>
                <th>LongueurPassage</th>
