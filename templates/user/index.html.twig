{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block main %}
{% if is_granted('ROLE_ADMIN') %}
    <h1>Utilisateurs</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Email</th>
                <th>Rôle</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Pseudo</th>
                <th>Photo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.email }}</td>
                <td>{% if user.roles[0] == 'ROLE_ADMIN' %}
                        Administrateur
                    {% elseif user.roles[0] == 'ROLE_GESTIONNAIRE' %}
                        Gestionnaire
                    {% elseif user.roles[0] == 'ROLE_TECHNICIEN' %}
                        Technicien
                    {% elseif user.roles[0] == 'ROLE_USER' %}
                        Utilisateur
                    {% endif %}
                </td>
                <td>{{ user.nomUtilisateur }}</td>
                <td>{{ user.prenomUtilisateur }}</td>
                <td>{{ user.pseudoUtilisateur }}</td>
                <td>{{ user.photoUtilisateur }}</td>
                <td>
                    <div class="bouton-align">
                        <div>
                            <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-info">Modifier</a>
                        </div>
                        <div>
                            {{ include('user/_delete_form.html.twig') }}
                        </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">Pas d'enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="bouton-align">
        <a href="{{ path('user_new') }}" class="btn btn-success">Créer un nouvel utilisateur</a>
        <a href="{{ path('parametrage') }}" class="btn btn-secondary">Retour</a>
    </div>
{% else %}
    <p>Accès interdit, veuillez contacter l'administrateur du site</p>
{% endif %}
{% endblock %}
