{% extends 'base.html.twig' %}

{% block title %}Equipement index{% endblock %}

{% block main %}
    <h1>Equipement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomEquipement</th>
                <th>PhotoEquipement</th>
                <th>DetailEquipement</th>
                <th>EtatVestuste</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for equipement in equipements %}
            <tr>
                <td>{{ equipement.id }}</td>
                <td>{{ equipement.nomEquipement }}</td>
                <td>{{ equipement.photoEquipement }}</td>
                <td>{{ equipement.detailEquipement }}</td>
                <td>{{ equipement.etatVestuste }}</td>
                <td>
                    <a href="{{ path('equipement_show', {'id': equipement.id}) }}">show</a>
                    <a href="{{ path('equipement_edit', {'id': equipement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('equipement_new') }}">Create new</a>
{% endblock %}
