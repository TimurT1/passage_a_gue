{% extends 'base.html.twig' %}

{% block title %}Familles d'ouvrage{% endblock %}

{% block main %}
{% if is_granted('ROLE_ADMIN') %}
    <h1>Familles d'ouvrage</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Famille</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for famille_ouvrage in famille_ouvrages %}
            <tr>
                <td>{{ famille_ouvrage.nomFamilleOuvrage }}</td>
                <td>
                    <div class="bouton-align">
                        <div>
                            <a href="{{ path('famille_ouvrage_edit', {'id': famille_ouvrage.id}) }}"  class="btn btn-info">Modifier</a>
                        </div>
                        <div>
                            {{ include('famille_ouvrage/_delete_form.html.twig') }}
                        </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="bouton-align">
        <a href="{{ path('famille_ouvrage_new') }}" class="btn btn-success">Créer une nouvelle famille</a>
        <a href="{{ path('parametrage') }}" class="btn btn-secondary">Retour</a>
    </div>
{% else %}
    <p>Accès interdit, veuillez contacter l'administrateur du site</p>
{% endif %}
{% endblock %}