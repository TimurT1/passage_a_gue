{% extends 'base.html.twig' %}

{% block title %}Types d'équipements{% endblock %}

{% block main %}
{% if is_granted('ROLE_ADMIN') %}
    <h1>Types d'équipements</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for type_equipement in type_equipements %}
            <tr>
                <td>{{ type_equipement.nomTypeEquipement }}</td>
                <td>{{ type_equipement.descriptionTypeEquipement }}</td>
                <td>
                    <div class="bouton-align">
                        <div>
                        <a href="{{ path('type_equipement_edit', {'id': type_equipement.id}) }}"  class="btn btn-info">Modifier</a>
                        </div>
                        <div>
                            {{ include('type_equipement/_delete_form.html.twig') }}
                        </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="bouton-align">
        <a href="{{ path('type_equipement_new') }}" class="btn btn-success">Créer un nouveau type d'équipement</a>
        <a href="{{ path('parametrage') }}" class="btn btn-secondary">Retour</a>
    </div>
    
{% else %}
    <p>Accès interdit, veuillez contacter l'administrateur du site</p>
{% endif %}
{% endblock %}